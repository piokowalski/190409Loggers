<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <File name="MyLogFile" fileName="logs/App.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
        <!--<Async name="Async">-->
            <!--<AppenderRef ref="MyLogFile"/>-->
        <!--</Async>-->
    </Appenders>
    <Loggers>
        <Logger name="file-appender" level="info">
            <AppenderRef ref="MyLogFile"/>
            <!--<AppenderRef ref="Async"/>-->
        </Logger>
    </Loggers>
</Configuration>
